{
    "name": "CodeLens",
    "description": "A tool to document GitHub repositories",
    "version": "1.0",
    "manifest_version": 3,

    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],

    "host_permissions": [
        "https://github.com/*"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "basic.html",
        "default_icon": "images/basic.jpg"
    },

    "content_scripts": [
        {
            "matches": ["https://github.com/*"],
            "js": ["scripts/content.js"],
            "css": ["styles/sidebar.css"],
            "run_at": "document_idle"
        }
    ]
}
