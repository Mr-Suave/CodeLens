{
    "manifest_version": 3,
    "name": "CodeLens",
    "version": "1.0",
    "description": "Find and display documentation from repositories with edit and save functionality",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "downloads"
    ],
    "host_permissions": [
      "https://api.github.com/*",
      "https://github.com/*",
      "https://raw.githubusercontent.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://github.com/*/*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "images/basic.jpg", 
          "scripts/marked.min.js", 
          "scripts/highlight.min.js"
        ],
        "matches": ["https://github.com/*"]
      }
    ]
  }